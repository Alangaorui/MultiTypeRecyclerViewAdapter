<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_line">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_2_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"
        tools:src="@mipmap/ic_bf_1" />

    <TextView
        android:id="@+id/item_2_title"
        style="@style/text_14_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_2_img"
        android:layout_toEndOf="@id/item_2_img"
        tools:text="住院康复营养A餐" />

    <TextView
        android:id="@+id/item_2_content"
        style="@style/text_12_9f9f9f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/item_2_title"
        android:layout_below="@id/item_2_title"
        android:layout_marginTop="10dp"
        tools:text="住院康复营养A餐" />

    <LinearLayout
        android:id="@+id/item_2_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_2_img"
        android:layout_alignStart="@id/item_2_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/item_2_price"
        style="@style/text_12_5c93f7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/item_2_img"
        android:layout_marginEnd="10dp"
        tools:text="￥ 26/餐" />


</RelativeLayout>